@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<Umbraco.Cms.Core.Models.Blocks.BlockGridItem>;
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;
@{
    var mediaContent = (ContentModels.Media)Model.Content;
    var image = mediaContent.Image;
}
@if (image != null)
{
    var altText = !string.IsNullOrWhiteSpace(image.Value<string>("altText")) ? image.Value<string>("altText") : "";
    <picture>
        <source href="@image.GetCropUrl(quality:80,furtherOptions:"&format=webp")" type="image/webp"  />
        <img class="img-fluid" src="@image.GetCropUrl(quality:80)" alt="@altText" />
    </picture>
}   